<% if @warehouse.errors.any?%>
	<div>
		<p>Verifique os erros abaixo:</p>

		<ul>
			<%= @warehouse.errors.full_messages.each do |msg| %>
				<li>
					<%= msg%>
				</li>
			<% end %>
		</ul>
	</div>
<% end %>

<%= form_with(model:@warehouse) do |f|%>
	<div>
		<%=f.label :name%>
		<%= f.text_field :name, :required => true%>	
	</div>

	<div>
		<%=f.label :description%>
		<%= f.text_area :description, :required => true%>
	</div>
	
	<div>
		<%=f.label :code%>
		<%= f.text_field :code, :required => true%>
	</div>
	
	<div>
		<%=f.label :address%>
		<%= f.text_field :address, :required => true%>
	</div>
	
	<div>
		<%=f.label :city%>
		<%= f.text_field :city, :required => true%>
	</div>


	<div>
		<%=f.label :cep%>
		<%= f.text_field :cep, :required => true%>
	</div>
	
	<div>
		<%=f.label :state%>
		<%= f.text_field :state, :required => true%>
	</div>
	
	<div>
		<%=f.label :area%>
		<%= f.number_field :area, :required => true%>
	</div>

	<div>
		<%=f.submit "Enviar"%>
	</div>
<% end%>