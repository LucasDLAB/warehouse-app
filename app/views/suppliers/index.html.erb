<h1>Fornecedores</h1>

<%if @suppliers.any?%>
    <table>
      <thead>
        <tr>
          <th>Razão Social</th>
          <th>Localização</th>
        </tr>
      </thead>

      <tbody>
        <% @suppliers.each do |supplier|%>
          <td><%= link_to supplier.corporate_name, supplier%></td>
          <td><%= supplier.full_address%></td>
        <%end%>    
      </tbody>
    </table>
<%else%>
  <p>Não existem fornecedores cadastrados</p>
<% end %>

<br>

<div>
  <%= link_to "Cadastrar novo fornecedor", new_supplier_path%>
</div>